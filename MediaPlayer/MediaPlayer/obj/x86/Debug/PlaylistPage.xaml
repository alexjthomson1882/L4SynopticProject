<Page x:ConnectionId='1'
    x:Class="MusicPlayer.PlaylistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicPlayer"
	xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">
	<Page.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="Foreground" Value="#FFF"/>
		</Style>
		<Style TargetType="Button">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="0"/>
		</Style>
	</Page.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid Grid.Row="0" Grid.Column="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="16"/>
				<RowDefinition Height="64"/>
				<RowDefinition Height="128"/>
				<RowDefinition Height="64"/>
				<RowDefinition Height="16"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="32"/>
				<ColumnDefinition/>
				<ColumnDefinition Width="32"/>
			</Grid.ColumnDefinitions>
			<Grid Grid.Row="2" Grid.Column="1">
				<Grid VerticalAlignment="Center">
					<TextBox x:ConnectionId='7' Name="PlaylistNameTextBox" TextAlignment="Left" TextWrapping="Wrap" FontSize="96" FontWeight="Bold" Text="Playlist Name"                                              />
				</Grid>
			</Grid>
			<Grid Grid.Row="3" Grid.Column="1">
				<Grid.RowDefinitions>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<Button x:ConnectionId='6'
					Name="DeletePlaylistButton" Grid.Row="0" Grid.Column="0"
					Background="#0a0a0a" Foreground="#FFF"
					FontSize="20" FontWeight="Bold"
					                                  
				>
					Delete Playlist
				</Button>
			</Grid>
		</Grid>
		<Grid Grid.Row="1" Grid.Column="0" Background="#111">
			<Grid.RowDefinitions>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="32"/>
				<ColumnDefinition/>
				<ColumnDefinition Width="32"/>
			</Grid.ColumnDefinitions>
			<Grid Grid.Row="0" Grid.Column="1">
				<Grid.RowDefinitions>
					<RowDefinition Height="32"/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="0.75*"/>
					<ColumnDefinition Width="8"/>
					<ColumnDefinition Width="0.25*"/>
				</Grid.ColumnDefinitions>
				<controls:GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" ResizeBehavior="BasedOnAlignment" ResizeDirection="Columns">
					<controls:GridSplitter.Element>
						<Grid>
						</Grid>
					</controls:GridSplitter.Element>
				</controls:GridSplitter>
				<Grid Grid.Row="0" Grid.Column="0" Background="#0a0a0a">
					<TextBlock Foreground="#FFF" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" TextAlignment="Left" Margin="12,0,12,0">
						Playlist
					</TextBlock>
				</Grid>
				<Grid Grid.Row="0" Grid.Column="2" Background="#0a0a0a">
					<TextBlock Foreground="#FFF" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" TextAlignment="Left" Margin="12,0,12,0">
						Library
					</TextBlock>
				</Grid>
				<Grid Grid.Row="1" Grid.Column="0">
					<ScrollViewer ZoomMode="Disabled" VerticalScrollMode="Auto" VerticalScrollBarVisibility="Visible" HorizontalScrollMode="Disabled" HorizontalScrollBarVisibility="Disabled">
						<controls:DataGrid x:ConnectionId='4' x:Name="MediaDataGrid" AutoGenerateColumns="False" CanUserSortColumns="True" IsReadOnly="True"                                                                  SelectionMode="Single" TabNavigation="Cycle"                                                  >
							<controls:DataGrid.Columns>
								<controls:DataGridTextColumn Tag="TrackName" Header="Track Name" CanUserResize="True" FontWeight="Bold" MinWidth="256" Width="*" Binding="{Binding Title}"/>
								<controls:DataGridTextColumn Tag="AlbumName" Header="Album" CanUserResize="True" MinWidth="256" Width="Auto" Binding="{Binding Album}"/>
								<controls:DataGridTextColumn Tag="ArtistName" Header="Artist" CanUserResize="True" MinWidth="256" Width="Auto" Binding="{Binding Artist}"/>
								<controls:DataGridTextColumn Tag="Duration" Header="Duration" CanUserResize="False" Width="Auto" Binding="{Binding DurationFormatted}"/>
								<controls:DataGridTextColumn Tag="DateAdded" Header="Date Added" CanUserResize="False" Width="Auto" Binding="{Binding DateAddedFormatted}"/>
							</controls:DataGrid.Columns>
							<controls:DataGrid.RowStyle>
								<Style TargetType="controls:DataGridRow">
									<Setter Property="controls:DataGridRow.ContextFlyout">
										<Setter.Value>
											<MenuFlyout>
												<MenuFlyoutItem x:ConnectionId='5' x:Name="RemoveFromPlaylist" Text="Remove from Playlist"                                 />
											</MenuFlyout>
										</Setter.Value>
									</Setter>
								</Style>
							</controls:DataGrid.RowStyle>
						</controls:DataGrid>
					</ScrollViewer>
				</Grid>
				<Grid Grid.Row="1" Grid.Column="2">
					<ScrollViewer ZoomMode="Disabled" VerticalScrollMode="Auto" VerticalScrollBarVisibility="Visible" HorizontalScrollMode="Disabled" HorizontalScrollBarVisibility="Disabled">
						<controls:DataGrid x:ConnectionId='2' x:Name="LibraryDataGrid" AutoGenerateColumns="False" CanUserSortColumns="True" IsReadOnly="True"                                                                           SelectionMode="Single" TabNavigation="Cycle"                                                    >
							<controls:DataGrid.Columns>
								<controls:DataGridTextColumn Tag="TrackName" Header="Track Name" CanUserResize="True" FontWeight="Bold" MinWidth="256" Width="*" Binding="{Binding Title}"/>
								<controls:DataGridTextColumn Tag="AlbumName" Header="Album" CanUserResize="True" MinWidth="256" Width="Auto" Binding="{Binding Album}"/>
								<controls:DataGridTextColumn Tag="ArtistName" Header="Artist" CanUserResize="True" MinWidth="256" Width="Auto" Binding="{Binding Artist}"/>
								<controls:DataGridTextColumn Tag="Duration" Header="Duration" CanUserResize="False" Width="Auto" Binding="{Binding DurationFormatted}"/>
								<controls:DataGridTextColumn Tag="DateAdded" Header="Date Added" CanUserResize="False" Width="Auto" Binding="{Binding DateAddedFormatted}"/>
							</controls:DataGrid.Columns>
							<controls:DataGrid.RowStyle>
								<Style TargetType="controls:DataGridRow">
									<Setter Property="controls:DataGridRow.ContextFlyout">
										<Setter.Value>
											<MenuFlyout>
												<MenuFlyoutItem x:ConnectionId='3' x:Name="AddToPlaylist" Text="Add to Playlist"                            />
											</MenuFlyout>
										</Setter.Value>
									</Setter>
								</Style>
							</controls:DataGrid.RowStyle>
						</controls:DataGrid>
					</ScrollViewer>
				</Grid>
			</Grid>
		</Grid>
    </Grid>
</Page>

